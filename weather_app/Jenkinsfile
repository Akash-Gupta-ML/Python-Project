pipeline {
    agent any

    environment {
        AWS_CREDENTIALS = credentials('aws-credentials')
        DOCKER_CREDENTIALS = credentials('docker-credentials')
        DOCKER_IMAGE = 'akashgupta0408/weather-app'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Akash-Gupta-ML/Python-Project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKER_CREDENTIALS) {
                        def app = docker.build(DOCKER_IMAGE)
                        app.push()
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    sh 'kubectl set image deployment/weather-app weather-app=$DOCKER_IMAGE:latest'
                }
            }
        }
    }
}
